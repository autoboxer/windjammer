{
  "name": "windjammer",
  "version": "0.1.0",
  "description": "A full-featured react component library built on top of tailwindcss",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "build:fast": "turbo run build:fast",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "typecheck": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint packages --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "validate": "pnpm typecheck && npx lint-staged",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/autoboxer/windjammer.git"
  },
  "author": {
    "name": "Jared Collier",
    "email": "jared.j.collier@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/autoboxer/windjammer/issues"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.13",
    "@heroicons/react": "^2.0.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@commitlint/cz-commitlint": "^17.4.4",
    "@types/node": "^18.14.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.8.3",
    "husky": "^8.0.3",
    "inquirer": "^8.2.5",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "tailwindcss": "^3.2.7",
    "turbo": "^1.8.2",
    "typescript": "^4.9.5"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --no-ignore --max-warnings=0 --fix"
    ],
    "**/*.{json,md,mdx,css,html}": [
      "prettier --write"
    ]
  }
}
